<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#201A30"

    tools:context=".newpassword">

  <ImageView
      android:layout_width="250dp"
      android:layout_height="250dp"
      android:background="@drawable/secure"
      android:id="@+id/image_newpass"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="50dp"
      />

  <TextView
      android:layout_below="@id/image_newpass"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="New Password"
      android:textColor="@color/white"
      android:textStyle="bold"
      android:textSize="40dp"
      android:layout_marginTop="50dp"
      android:layout_marginLeft="20dp"
      android:id="@+id/text_newpass"
      />

  <FrameLayout
      android:layout_marginTop="@dimen/_20sdp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/text_newpass"
      android:id="@+id/framlayout1_newpass">

    <EditText
        style="@style/edit_test"
        android:id="@+id/new_pass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:hint="PASSWORD"
        android:inputType="numberPassword"
        />

    <ImageView
        android:layout_marginRight="@dimen/_35sdp"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/password_hide"
        android:id="@+id/newpass_password_hideimg"
        android:layout_gravity="center_vertical|end"/>

    <ImageView
        android:visibility="gone"
        android:layout_marginRight="@dimen/_35sdp"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/password_view"
        android:id="@+id/newpass_password_viewimg"
        android:layout_gravity="center_vertical|end"/>


  </FrameLayout>
  <FrameLayout
      android:layout_marginTop="@dimen/_20sdp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/framlayout1_newpass"
      android:id="@+id/framlayout2_newpass">

    <EditText
        style="@style/edit_test"
        android:id="@+id/new_confpass"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:hint="CONFIRM PASSWORD"
        android:inputType="numberPassword"
        />

    <ImageView
        android:layout_marginRight="@dimen/_35sdp"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/password_hide"
        android:id="@+id/newpass2_password_hideimg"
        android:layout_gravity="center_vertical|end"/>

    <ImageView
        android:visibility="gone"
        android:layout_marginRight="@dimen/_35sdp"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/password_view"
        android:id="@+id/newpass2_password_viewimg"
        android:layout_gravity="center_vertical|end"/>

  </FrameLayout>
  <Button
      android:id="@+id/newpass_button"
      android:layout_width="120sp"
      android:layout_height="wrap_content"
      android:layout_below="@id/framlayout2_newpass"
      android:layout_marginTop="50dp"
      android:background="@drawable/buttton_design"
      android:gravity="center"
      android:text="Generate"
      android:layout_centerHorizontal="true"
      />
  <TextView
      android:layout_below="@id/newpass_button"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:id="@+id/backlogin_newpass"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Back to login"
      android:textColor="@color/acva"
      android:textSize="@dimen/_15sdp" />

  </RelativeLayout>